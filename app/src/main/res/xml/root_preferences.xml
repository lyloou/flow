<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="设置天气">

        <Preference
            android:title="城市"
            app:iconSpaceReserved="false"
            app:key="city"
            app:summary="深圳" />
    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="缓存清理">

        <Preference
            app:iconSpaceReserved="false"
            app:key="clearUser"
            app:title="清除用户信息" />
        <Preference
            app:iconSpaceReserved="false"
            app:key="clearFlow"
            app:title="清除flow数据库信息" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="clearSchedule"
            app:title="清除Schedule信息" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="clearAll"
            app:title="清除全部信息" />
    </PreferenceCategory>

</PreferenceScreen>

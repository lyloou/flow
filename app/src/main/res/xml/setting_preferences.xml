<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="设置天气">

        <Preference
            android:title="城市"
            app:iconSpaceReserved="false"
            app:key="@string/setting_city"
            app:summary="深圳" />
    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="界面">

        <SwitchPreference
            app:iconSpaceReserved="false"
            app:key="@string/setting_gray_mode"
            app:title="灰色模式" />

    </PreferenceCategory>
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="缓存清理">

        <Preference
            android:title="缓存大小"
            app:iconSpaceReserved="false"
            app:key="@string/setting_cache_size"
            app:summary="0" />

    </PreferenceCategory>

</PreferenceScreen>
